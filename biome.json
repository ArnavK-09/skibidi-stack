{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"TESTING-HERE/**",
			"**/node_modules/**",
			"**/dist/**",
			"**/build/**",
			"templates/frontend/**",
			"*.js"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noControlCharactersInRegex": "off"
			},
			"complexity": {
				"useLiteralKeys": "off"
			},
			"performance": {
				"noAccumulatingSpread": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
